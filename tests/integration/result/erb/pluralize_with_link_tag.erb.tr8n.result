<%= tr( "{link_to_user} earned the {link_to_badge} badge in {link_to_game} and [count || "other badge"]", nil, { :link_to_user => (link_to(user.username, account_path(user))), :link_to_badge => (link_to(badge.name, game_url)), :link_to_game => (link_to(game.title, game_url)), :count => (count) } ) %>